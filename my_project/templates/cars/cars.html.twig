<body>
{% block body %}
    <div class="container mt-4">
        <h1 class="text-center mb-4">Nos Modèles</h1>
        <div style="height: 50px;"></div>
        <div class="row">
            {% for car in cars %}
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm">
                        <img src="{{ car.image }}" class="card-img-top" alt="{{ car.brand }} {{ car.model }}">
                        <div class="card-body">
                            <h5 class="card-title">{{ car.brand }} {{ car.model }}</h5>
                            <p class="card-text"><strong>Type :</strong> {{ car.type }}</p>
                            <p class="card-text"><strong>Couleur :</strong> {{ car.color }}</p>
                            <p class="card-text"><strong>Puissance :</strong> {{ car.horsepower }} ch</p>
                            <p class="card-text"><strong>Prix :</strong> {{ car.price }} €</p>
                        </div>
                    </div>
                </div>
            {% else %}
                <p class="text-center">Aucune voiture disponible.</p>
            {% endfor %}
        </div>
    </div>
{% endblock %}

